@model IEnumerable<VoterAnalysis2.Models.Voter>

@{
    ViewData["Title"] = "SeeVotersED";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>SeeVotersED</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Suffix)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ResidentialAddress1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResidentialSecondaryAddr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResidentialCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResidentialState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResidentialZip)
            </th>
            
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Suffix)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.ResidentialAddress1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidentialSecondaryAddr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidentialCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidentialState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ResidentialZip)
            </td>
            
            <td>
                <a asp-action="CheckOffVoter" asp-route-id="@item.Id">Checkoff Voter</a> 
            </td>
        </tr>
}
    </tbody>
</table>
